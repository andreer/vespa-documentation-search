<deployment version="1.0" major-version="8">
    <upgrade policy="canary"/>
    <instance id="default">

        <prod>
            <region>aws-us-east-1c</region>
            <delay minutes="10" />
            <test>aws-us-east-1c</test>
            <region>aws-eu-west-1a</region>
            <region>gcp-us-central1-f</region>
        </prod>

        <endpoints>
            <endpoint container-id="default">
                <region>aws-us-east-1c</region>
                <region>aws-eu-west-1a</region>
                <region>gcp-us-central1-f</region>
            </endpoint>
            <endpoint type='private' container-id='default'>
                <allow with='aws-private-link' arn='arn:aws:iam::182951675883:root' />
                <allow with='aws-private-link' arn='arn:aws:iam::420194040740:root' />
            </endpoint>
            <endpoint id="playground" container-id="playground">
                <region>aws-us-east-1c</region>
                <region>aws-eu-west-1a</region>
                <region>gcp-us-central1-f</region>
            </endpoint>
        </endpoints>

    </instance>
</deployment>

